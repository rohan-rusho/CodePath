<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp"
        android:gravity="center_horizontal">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="10dp"
            cardView:cardCornerRadius="22dp"
            cardView:cardElevation="10dp"
            cardView:cardBackgroundColor="@color/card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/iconDataTypes"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_datatypes"
                    android:padding="10dp"
                    android:contentDescription="@string/app_name"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/titleDataTypes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Learn Data Types"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="14dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Definition -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Definition"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#F57C00"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A data type defines the kind of value a variable can hold and which operations are valid for that value. Correct types help prevent logic errors and improve program clarity."
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"/>

        <!-- Categories -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main Categories"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#F57C00"
            android:layout_marginBottom="6dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Primitive (basic built-in types)\n2. Reference / Object (instances stored via references)"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"/>

        <!-- Primitive Types -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primitive Types (Java examples)"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FF9800"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="They directly hold simple values (not objects)."
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="boolean isReady = true;\nbyte b = 10;\nshort s = 32000;\nint count = 42;\nlong distance = 123456789L;\nfloat ratio = 3.14f;\ndouble price = 19.99;\nchar grade = 'A';"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            android:textIsSelectable="true" />

        <!-- Reference Types -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reference / Object Types"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FF9800"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Store references (addresses) to objects in memory instead of raw values."
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginBottom="6dp"/>
        <!-- Generics escaped -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='String name = "Alex";\nint[] scores = {90, 85, 70};\nList&lt;String&gt; items = new ArrayList&lt;&gt;();\nPerson user = new Person("Sam");'
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            android:textIsSelectable="true"/>

        <!-- Wrapper Classes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wrapper Classes"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FF9800"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Object versions of primitives: Integer, Double, Boolean, etc. Useful for generics (e.g., List&lt;Integer&gt;) and nullability."
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginBottom="6dp"/>

        <!-- Type Conversion -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type Conversion"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FF9800"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Implicit (widening) happens safely; explicit (narrowing) requires a cast and may lose data."
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginBottom="6dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='int x = 5;\nlong big = x; // implicit widening\n\ndouble price = 19.9;\nint truncated = (int) price; // explicit cast (19)\n\nString numText = "42";\nint parsed = Integer.parseInt(numText);'
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            android:textIsSelectable="true"/>

        <!-- String Notes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="String Notes"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FF9800"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In many languages, strings are immutable objects. Operations like concatenation may create new objects."
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"/>

        <!-- Choosing a Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choosing a Type"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FF9800"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick the smallest clear type that expresses the data: int for counts, double for precise decimals (or BigDecimal for money), boolean for flags."
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"/>

        <!-- Common Mistakes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Common Mistakes"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FF9800"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Using double for precise currency math\n• Unnecessary casting\n• Storing numbers in Strings too long\n• Ignoring overflow limits (int beyond ~2.1B)\n• Using object wrappers when primitive is enough"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"/>

        <!-- Practice Ideas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Practice Ideas"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FF9800"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Convert a String to int and sum it with another number.\n2. Cast a double to int and observe truncation.\n3. Write a method that counts characters in a String.\n4. Try storing large numbers in int vs long.\n5. Parse user input safely (handle NumberFormatException)."
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginBottom="18dp"/>

        <!-- Tips -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tips"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#F57C00"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Know primitive default values (in fields).\n• Favor primitives unless you need nulls/generics.\n• Avoid silent data loss when casting.\n• Use BigDecimal for financial precision."
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginBottom="24dp"/>

        <!-- Share Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnShareDataTypes"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Share"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button_bg"
            android:layout_margin="10dp"/>
    </LinearLayout>
</ScrollView>
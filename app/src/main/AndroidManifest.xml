<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.learnnow.codepathfoundations">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CodePath">

        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Detail Activities (no forced orientation) -->
        <activity android:name=".MainActivity" android:exported="true" />
        <activity android:name=".VariablesDetailActivity" android:exported="false" />
        <activity android:name=".DataTypesDetailActivity" android:exported="false" />
        <activity android:name=".ControlFlowDetailActivity" android:exported="false" />
        <activity android:name=".FunctionDetailActivity" android:exported="false" />
        <activity android:name=".DebuggingDetailActivity" android:exported="false" />
        <activity android:name=".AlgorithmsDetailActivity" android:exported="false" />

    </application>
</manifest>